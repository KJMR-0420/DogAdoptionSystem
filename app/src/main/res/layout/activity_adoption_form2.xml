<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard.AdoptionForm2">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo" />>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/Step2"
                android:layout_width="wrap_content"
                android:layout_below="@+id/imageView"
                android:fontFamily="arial"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingBottom="10sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="STEP 2: Kindly Fill up the form"
                android:textColor="#ffbf00"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:background="#ffc34d"
                    android:text="Dog Name"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center_horizontal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtDog_name"
                    android:hint="Dog Name"
                    android:inputType="textPersonName"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:background="#ffd633"
                    android:text="Dog Breed"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center_horizontal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtDog_Breed"
                    android:hint="Breed"
                    android:inputType="textPersonName"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"/>

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:background="#ffc34d"
                    android:text="Dog Location"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center_horizontal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtDog_Loc"
                    android:hint="Location"
                    android:textColor="#000"
                    android:inputType="textPersonName"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Address"
                    android:background="#ffd633"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center_horizontal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtDog_Address"
                    android:hint="Address"
                    android:inputType="textPostalAddress"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Contact Number"
                    android:background="#ffc34d"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center_horizontal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtDog_Num"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:textColor="#000"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView

                        android:id="@+id/FfilledupForm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:hint="Upload the Filled Up Form"
                        android:textColor="#fda47e"
                        android:textSize="15dp" />
                    <Button
                        android:id="@+id/FfilledupFormbtn"
                        android:layout_marginLeft="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:textColor="#fff"
                        android:textSize="10dp"
                        android:text="Browse"/>
                    <ImageView
                        android:id="@+id/formimage"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="invisible" />
                </LinearLayout>
                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textColor="#fff"
                    android:id="@+id/CAdopt2"
                    android:layout_gravity="center"
                    android:text="Confirm Adoption"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>