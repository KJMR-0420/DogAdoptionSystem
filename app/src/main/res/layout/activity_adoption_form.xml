<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="Dashboard.AdoptionForm">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/logo" />
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_below="@+id/imageView"
                android:fontFamily="arial"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingBottom="10sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Welcome to Dog Adoption Form"
                android:textColor="#ffbf00"
                />
            <TextView
                android:id="@+id/Step1"
                android:layout_width="wrap_content"
                android:layout_below="@+id/imageView"
                android:fontFamily="arial"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingBottom="10sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="STEP 1: Kindly Fill up the form"
                android:textColor="#ffbf00"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/FDog_name"
                android:hint="Dog Name"
                android:inputType="textPersonName"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:textSize="20sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/FDog_Breed"
                android:hint="Breed"
                android:inputType="textPersonName"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:textSize="20sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/FDog_Loc"
                android:hint="Location"
                android:textColor="#000"
                android:inputType="textPersonName"
                android:layout_marginTop="10dp"
                android:textSize="20sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/FDog_Address"
                android:hint="Address"
                android:inputType="textPostalAddress"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:textSize="20sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/FDog_Num"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Fvalidphoto"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Valid Id Required"
                    android:textColor="#fda47e"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/Fvalidbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:text="Browse"
                    android:layout_marginLeft="100dp"
                    android:textColor="#fff"
                    android:textSize="10dp" />
                <ImageView
                    android:id="@+id/validIdimage"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="invisible" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView

                    android:id="@+id/FfilledupForm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:hint="Upload the Filled Up Form"
                    android:textColor="#fda47e"
                    android:textSize="15dp" />
                <Button
                    android:id="@+id/FfilledupFormbtn"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:textColor="#fff"
                    android:textSize="10dp"
                    android:text="Browse"/>
                <ImageView
                    android:id="@+id/formimage"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="invisible" />
            </LinearLayout>
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textColor="#fff"
                android:id="@+id/CAdopt"
                android:layout_gravity="center"
                android:text="Proceed"/>
        </LinearLayout>
    </ScrollView>




</RelativeLayout>
